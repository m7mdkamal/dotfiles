! Enable the extended coloring options
rofi.color-enabled: true
!                  bg             border   separator
rofi.color-window: #000000      , #a0100b,  #2274a5,
!                  bg             fg       bg-alt   hl-bg    hl-fg
rofi.color-normal: argb:00000000, #FFFFFF, 000000, 000000,   #c11b15
rofi.color-active: argb:00000000, #FFFFFF, argb:00000000,   argb:00000000, #c11b15
rofi.color-urgent: #2f343f, #2f343f, #2f343f, #2f343f, #2f343f

rofi.separator-style: none
rofi.sidebar-mode: true
rofi.bw: 2
rofi.columns: 1
rofi.padding: 16

rofi.yoffset: 0
rofi.location: 0
rofi.width: 600
rofi.lines: 10
rofi.fixed-num-lines: true

